<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/assets/css/otp.css" />
  </head>
  <body>
    <section class="container-fluid d-block h-10">
      <form id="form" action="" method="post">
        <div class="row justify-content-center h-100">
          <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px">
            <div
              class="card bg-white mb-5 mt-5 border-0"
              style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02)"
            >
              <div class="card-body p-5 text-center">
                <h4>Verify</h4>
                <p>Your code was sent to you via email</p>

                <% if (typeof message !== 'undefined') { %>
                <h1 class="error-message"><%= message %></h1>
                <% } %>
                <div class="otp-error" id="otpError"></div>
                <div class="otp-field mb-4">
                  <input id="Otp" type="number" name="otp" />
                </div>
                <input type="hidden" value="<%=id%>" name="user_id">
                <button type="submit" class="btn btn-primary mb-3">
                  Verify
                </button>

                <p class="otp-timer">Time remaining: <span id="timer">30</span></p>

                <p id="resend-otp" class="resend text-muted mb-0">
                  Didn't receive code? <a href="/user/resendOtp">Request again</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>

    <script src="assets/js/otp-validation.js"></script>
  </body>
</html>
