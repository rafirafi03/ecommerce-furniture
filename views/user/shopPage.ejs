<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get the form
            const form = document.getElementById("filterForm");
    
            // Add event listener for form submission
            form.addEventListener("submit", function(event) {
                // Loop through each checkbox and store its checked state in localStorage
                const checkboxes = document.querySelectorAll('input[name="categoryFilter"]');
                checkboxes.forEach(function(checkbox) {
                    localStorage.setItem(checkbox.value, checkbox.checked);
                });
            });
    
            // Restore checkbox states from localStorage on page load
            const checkboxes = document.querySelectorAll('input[name="categoryFilter"]');
            checkboxes.forEach(function(checkbox) {
                const isChecked = localStorage.getItem(checkbox.value) === "true";
                checkbox.checked = isChecked;
            });
        });
    </script>

