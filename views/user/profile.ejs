                                            </button>
                                        </form>
                                    </div><!-- .End .tab-pane -->



                                    <div class="tab-pane fade ml-5" id="tab-orders" role="tabpanel"
                                        aria-labelledby="tab-orders-link">
                                        <%if(orders && orders.length> 0) {%>
                                            <h4 class="account-title">Orders</h4>
                                            <div class="account-table text-center table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th class="no">No</th>
                                                            <th class="date">Date</th>
                                                            <th class="total">Amount</th>
                                                            <th class="">Payment</th>
                                                            <th class="name">Status</th>
                                                            <th class="action">details</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% orders.forEach((val,index)=> {%>
                                                            <tr>
                                                                <td>
                                                                    <%=index + 1%>
                                                                </td>
                                                                <td>
                                                                    <%= val.orderDate.toLocaleDateString('en-US', {
                                                                        weekday: 'short' , year: 'numeric' ,
                                                                        month: 'short' , day: 'numeric' }) %>

                                                                </td>
                                                                <td>
                                                                    <%=val.totalPrice%>
                                                                </td>
                                                                <td>
                                                                    <%=val.payment%>
                                                                </td>
                                                                <%if(val.orderStatus==='Cancelled'){%>
                                                                    <td><span
                                                                            class="badge rounded-pill alert-danger">Cancelled</span>
                                                                    </td>
                                                                    <%}else if(val.orderStatus==='delivered' ){%>
                                                                        <td><span
                                                                                class="badge rounded-pill alert-success">Delivered</span>
                                                                        </td>
                                                                        <%}else if(val.orderStatus==='pending' ){%>
                                                                            <td><span
                                                                                    class="badge rounded-pill alert-warning">Pending</span>
                                                                            </td>
                                                                            <%}else
                                                                                if(val.orderStatus==='out for delivery'
                                                                                ){%>
                                                                                <td><span
                                                                                        class="badge rounded-pill alert-success">Out
                                                                                        for delivery</span></td>
                                                                                <%}else if(val.orderStatus==='placed'
                                                                                    ){%>
                                                                                    <td><span
                                                                                            class="badge rounded-pill alert-success">Placed</span>
                                                                                    </td>
                                                                                    <%}else
                                                                                        if(val.orderStatus==='returned'
                                                                                        ){%>
                                                                                        <td><span
                                                                                                class="badge rounded-pill alert-danger">Returned</span>
                                                                                        </td>
                                                                                        <%}%>

                                                                                            <td>
                                                                                                <a
                                                                                                    href="/orderDetails?id=<%=val._id%>">View</a>
                                                                                            </td>
                                                            </tr>
                                                            <%})%>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <%} else {%>

                                                <p>No orders available yet.</p>


                                                <!-- <p>No order has been made yet.</p> -->
                                                <a href="category.html" class="btn btn-outline-primary-2"><span>GO
                                                        SHOP</span><i class="icon-long-arrow-right"></i></a>

                                                <%}%>
                                    </div>
                                    <!-- .End .tab-pane -->

                                    <div class="tab-pane fade" id="tab-wallet" role="tabpanel"
                                        aria-labelledby="tab-wallet-link">
                                        <div class="account-table text-center table-responsive ml-5">
                                            <table class="table">
                                                <thead>
                                                    <h4 style="color: #c96;">Wallet History</h4>
                                                    <h6 class="text-success mt-3">Balance : ₹ <%=users.wallet%>
                                                    </h6>
                                                    <br>
                                                    <tr>
                                                        <th class="name">
                                                            Date
                                                        </th>
                                                        <th class="date">status</th>

                                                        <th class="action">
                                                            Amount
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <%users.walletHistory.forEach((val)=>{%>
                                                        <tr>
                                                            <td>
                                                                <%=val.date.toLocaleDateString('en-US', {
                                                                    weekday: 'short' , year: 'numeric' , month: 'short'
                                                                    , day: 'numeric' })%>
                                                            </td>

                                                            <%if(val.amount>0){%>

                                                                <td class="text-success">credited</td>


                                                                <td class="text-success">₹ <%=val.amount%>
                                                                </td>
                                                                <%}else{%>
                                                                    <td class="text-danger">debited</td>


                                                                    <td class="text-danger">-₹ <%=Math.abs(val.amount)%>

                                                                    </td>
                                                                    <%}%>

                                                        </tr>
                                                        <%})%>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div><!-- .End .tab-pane -->

                                    <% if (address && address.address && address.address.length) { %>


                                        <div class="tab-pane fade" id="tab-address" role="tabpanel"
                                            aria-labelledby="tab-address-link">
                                            <% address.address.forEach(function(val,index) { %>
