                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->

                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">Address</h6>
                                                                    <p>
                                                                        <%= val.address %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->
                                                        </div><!-- End .row -->

                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">Email</h6>
                                                                    <p>
                                                                        <%= val.email %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->

                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">Mobile</h6>
                                                                    <p>
                                                                        <%= val.mobile %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->
                                                        </div><!-- End .row -->
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">Country</h6>
                                                                    <p>
                                                                        <%= val.country %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->

                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">State</h6>
                                                                    <p>
                                                                        <%= val.state %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->
                                                        </div><!-- End .row -->
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">District</h6>
                                                                    <p>
                                                                        <%= val.district %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->

                                                            <div class="col-sm-6">
                                                                <ol>
                                                                    <h6 class="address-h6">Pincode</h6>
                                                                    <p>
                                                                        <%= val.pincode %>
                                                                    </p>
                                                                </ol>
                                                            </div><!-- End .col-sm-6 -->
                                                        </div><!-- End .row -->
                                                    </div><!-- End .card-body -->
                                                    <div class="text-center d-flex justify-content-center">
                                                        <div class="more-container text-center mt-0 mb-7">
                                                            <button type="button" class="btn btn-primary"
                                                                onclick="openEditModal('<%=val._id%>','<%=val.fullName%>','<%=val.address%>','<%=val.email%>','<%=val.mobile%>','<%=val.country%>','<%=val.state%>','<%=val.district%>','<%=val.pincode%>')"
                                                                data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                                                Edit Address
                                                            </button>
                                                        </div>
                                                        <div class="more-container text-center mt-0">
                                                            <button onclick="deleteAddress('<%= val._id %>')"
                                                                class="btn btn-outline-dark-3 btn-more">
                                                                <span>Delete</span><i class="fa-solid fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div><!-- End .card-dashboard -->

                                                <% }) %>
                                                    <div class="more-container text-center mt-0 mb-7">
                                                        <a href="#tab-addAddress"
                                                            class="btn btn-outline-dark-3 btn-more nav-link"
                                                            data-toggle="tab" role="tab" aria-controls="tab-addProfile"
                                                            aria-selected="false">
                                                            <span>Add Address</span><i class="fa-solid fa-pencil"></i>
                                                        </a>
                                                    </div>
                                        </div><!-- .End .tab-pane -->
                                        <% } else { %>
                                            <div class="tab-pane fade" id="tab-address" role="tabpanel"
                                                aria-labelledby="tab-address-link">
