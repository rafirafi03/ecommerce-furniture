                                                <ol>
                                                    <h6>User Name</h6>
                                                    <p>
                                                        <%=users.name%>
                                                    </p>
                                                </ol>

                                                <ol>
                                                    <h6>Email</h6>
                                                    <p>
                                                        <%=users.email%>
                                                    </p>
                                                </ol>

                                                <ol>
                                                    <h6>Mobile</h6>
                                                    <p>
                                                        <%=users.mobile%>
                                                    </p>
                                                </ol>

                                                <ol>
                                                    <h6>Refferal code</h6>
                                                    <p>
                                                        <%=users.referral%>
                                                    </p>
                                                </ol>


