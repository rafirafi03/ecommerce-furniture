                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <label>User Name *</label>
                                                    <input type="text" id="userName" value="<%= users.name %>"
                                                        class="form-control mb-0">
                                                    <div class="login-error" id="error-name"></div>
                                                </div><!-- End .col-sm-6 -->
                                            </div><!-- End .row -->

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <label>Email *</label>
                                                    <input type="text" id="userEmail" value="<%= users.email %>"
                                                        class="form-control text-light" disabled>
                                                </div><!-- End .col-sm-6 -->
                                            </div><!-- End .row -->

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <label>Mobile *</label>
                                                    <input type="text" id="userMobile" value="<%= users.mobile %>"
                                                        class="form-control mb-0">
                                                    <div class="login-error" id="error-mobile"></div>
                                                </div><!-- End .col-sm-6 -->
                                            </div><!-- End .row -->
                                            <br>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <label>Referral *</label>
                                                    <input type="text" id="userMobile" value="<%= users.referral %>"
                                                        class="form-control mb-0 text-light" disabled>
                                                    <div class="login-error" id="error-mobile"></div>
                                                </div><!-- End .col-sm-6 -->
                                            </div><!-- End .row -->
